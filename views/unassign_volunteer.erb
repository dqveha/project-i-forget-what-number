<h3>Remove Volunteer from Project</h3>
    <form action="/projects/<%= @project.id %>/unassign" method="post">
      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
        <% if @volunteers.any?%>
          <select id = "volunteer_id" name="volunteer_id" class="form-select">
          <% @volunteers.each do |volunteer| %>
          <option name="<%= volunteer.name %>" value="<%= volunteer.id %>"><%= volunteer.name %></option>
        <% end %>
        </select>
    <button type="submit"class="btn btn-danger mt-3">Remove</button>
      </div>
        <% else %>
          <p>There are currently no available volunteers.</p>
        <% end %>
    </form>